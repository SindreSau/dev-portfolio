{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false,
        "ignore": [
            "**/node_modules/**",
            "**/dist/**",
            "**/.astro/**"
        ]
    },
    "formatter": {
        "enabled": true,
        "bracketSpacing": true,
        "indentStyle": "space",
        "indentWidth": 2
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true
    },
    "javascript": {
        "formatter": {
            "semicolons": "always",
            "quoteStyle": "single",
            "trailingCommas": "es5"
        }
    },
    "overrides": [
        {
            "include": [
                "*.astro"
            ],
            "linter": {
                "rules": {
                    "style": {}
                }
            }
        }
    ]
}