---
import { SEO } from "astro-seo";
import ClientRouter from "astro/components/ClientRouter.astro";

import "@fontsource/megrim";
import "@fontsource-variable/work-sans";
import "@fontsource-variable/caveat";
import "@fontsource-variable/expletus-sans";

// Preload fonts for better performance
import caveatWoff2 from "@fontsource-variable/caveat/files/caveat-latin-wght-normal.woff2?url";
import expletusSansWoff2 from "@fontsource-variable/expletus-sans/files/expletus-sans-latin-wght-normal.woff2?url";
import workSansWoff2 from "@fontsource-variable/work-sans/files/work-sans-latin-wght-normal.woff2?url";
import megrimWoff2 from "@fontsource/megrim/files/megrim-latin-400-normal.woff2?url";

const { title, description } = Astro.props;
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

<link rel="sitemap" href="/sitemap-index.xml" type="application/xml" />
<meta name="generator" content={Astro.generator} />

<!-- Preload fonts -->
<link
    rel="preload"
    as="font"
    type="font/woff2"
    href={megrimWoff2}
    crossorigin="anonymous"
/>
<link
    rel="preload"
    as="font"
    type="font/woff2"
    href={workSansWoff2}
    crossorigin="anonymous"
/>
<link
    rel="preload"
    as="font"
    type="font/woff2"
    href={caveatWoff2}
    crossorigin="anonymous"
/>

<link
    rel="preload"
    as="font"
    type="font/woff2"
    href={expletusSansWoff2}
    crossorigin="anonymous"
/>

<!-- SEO -->
<SEO
    title={title}
    description={description}
    titleTemplate="%s | Sindre Sauarlia Fullstack Developer"
    titleDefault="Sindre Sauarlia Fullstack Developer"
/>

<ClientRouter />
