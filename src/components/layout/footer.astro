---
import { Icon } from "astro-icon/components";

const socials = [
    {
        name: "GitHub",
        url: "https://github.com/sindresau",
        icon: "mdi:github",
    },
    {
        name: "LinkedIn",
        url: "https://www.linkedin.com/in/sindre-sauarlia/",
        icon: "mdi:linkedin",
    },
    {
        name: "Instagram",
        url: "https://www.instagram.com/sindresauarlia/",
        icon: "mdi:instagram",
    },
];
---

<div class="md:py-12 py-8">
    <div class="flex items-center justify-center md:gap-6 gap-4">
        {
            socials.map(social => (
                <a
                    href={social.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-muted-foreground hover:text-foreground transition-colors duration-200"
                    aria-label={social.name}
                >
                    <Icon name={social.icon} class="size-6" />
                </a>
            ))
        }
    </div>

    <div class="text-center text-sm text-muted-foreground mt-4">
        &copy; {new Date().getFullYear()} Sindre Sauarlia. All rights reserved.
    </div>
</div>
