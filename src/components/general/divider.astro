---
import { cn } from "@/utils/cn";

type Props = {
    class?: string;
    scrollFadeIn?: boolean;
};

const { class: className, scrollFadeIn, ...props }: Props = Astro.props;
---

<hr
    class={cn(
        "border-t border-border h-0.5 w-full ",
        className,
        scrollFadeIn ? "scroll-fadein opacity-0" : ""
    )}
    {...props}
/>
