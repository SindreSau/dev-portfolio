{
    "plugins": [
        "prettier-plugin-astro"
    ],
    "printWidth": 80,
    "tabWidth": 4,
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "overrides": [
        {
            "files": "*.astro",
            "options": {
                "parser": "astro",
                "tabWidth": 4,
                "singleQuote": false
            }
        }
    ]
}